                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="auto"/>
                                                            <RowDefinition/>
                                                        </Grid.RowDefinitions>
                                                        <TextBlock Text="特性" FontSize="20" TextWrapping="Wrap" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10 10 0 0"/>
                                                        <TextBlock Text="{Binding Special}" Grid.Row="1" FontSize="20" TextWrapping="Wrap" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="30 0 20 0"/>
                                                    </Grid>
                                                </Border>
                                            </Grid>
